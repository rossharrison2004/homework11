import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.util.HashMap;
import java.util.Map;

public class WordCount {
    public static void main(String[] args) {
        String inputFileName = "input.txt";
        String outputFileName = "output.txt";

        try {
            // Create a BufferedReader to read the input file
            BufferedReader reader = new BufferedReader(new FileReader(inputFileName));
            
            // Create a BufferedWriter to write the output file
            BufferedWriter writer = new BufferedWriter(new FileWriter(outputFileName));

            // Create a map to store word counts (case-insensitive)
            Map<String, Integer> wordCounts = new HashMap<>();

            String line;
            while ((line = reader.readLine()) != null) {
                // Convert the word to lowercase to make it case-insensitive
                String word = line.toLowerCase();

                // Update the word count in the map
                wordCounts.put(word, wordCounts.getOrDefault(word, 0) + 1);
            }

            // Iterate through the word counts and write them to the output file
            for (Map.Entry<String, Integer> entry : wordCounts.entrySet()) {
                writer.write(entry.getKey() + " " + entry.getValue());
                writer.newLine();
            }

            // Close the input and output files
            reader.close();
            writer.close();

            System.out.println("Word counts have been written to " + outputFileName);
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}

